<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div class="cart_title">Your Pragmatic Cart</div>
<table>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= item.qty %></td>
      <td><%= item.product.title %></td>
      <td class="item_price"><%= number_to_currency(item.total_price) %></td>
      <td class="inline_delete_button">
        <%= button_to "Delete", line_item_path(item), :method => :delete %>
      </td>
    </tr>
  <% end %>
  <tr class="total_line">
    <td colspan="2">Total&nbsp;&nbsp;</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>

<%= button_to "Empty Cart", @cart, :confirm => "Are you sure?",
                                   :method => :delete %>
<br /><br />
